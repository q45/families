<h1>Family Visit List</h1>

<table>
  <tr>
    <th>Family name</th>
    <th>Number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @families.each do |family| %>
  <tr>
    <td><%= family.family_name %></td>
    <td><%= family.number %></td>
    <td><%= link_to 'Show', family %></td>
    <td><%= link_to 'Edit', edit_family_path(family) %></td>
    <td><%= link_to 'Delete', family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<section id="new_link">
<%= link_to 'New Family', new_family_path %>
</section>